<%- include("templates/header") %>
<div class="container-fluid d-flex justify-content-center">
  <div id="signup-page-card" class="text-center mx-auto my-4">
    <h2>Create New User</h2>
    <form action="/submitUser" method="post">
      <input
        type="text"
        id="name"
        name="name"
        placeholder="name"
        class="my-1"
      />
      <br />
      <input
        type="email"
        id="email"
        name="email"
        placeholder="email"
        class="my-1"
      />
      <br />
      <input
        type="password"
        id="password"
        name="password"
        placeholder="password"
        class="my-1"
      />
      <br />
      <input type="submit" name="submit" class="my-1 btn btn-primary" />
    </form>
  </div>
</div>
<%- include("templates/footer") %>
